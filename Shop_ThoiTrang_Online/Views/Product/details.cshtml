                <div class="product-details">
                    <!--product-details-->
                    <div class="col-sm-5">
                        <div class="view-product">
                            <img src="~/Media/images/all/@Model.hinhanh" alt="" />
                            <h3>ZOOM</h3>
                        </div>
                       

                    </div>
                    <div class="col-sm-7">
