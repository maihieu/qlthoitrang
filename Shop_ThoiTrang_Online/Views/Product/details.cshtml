                            <p>Mã sản phẩm  : @Model.masp</p>
                            <img src="~/Media/images/product-details/rating.png" alt="" />
                            <span>
                                <span>@Model.dongia vnd</span>
                                <label>Quantity:</label>
                                <input type="text" value="1" />
                                <a  href="/Cart/detailscart/" class="btn btn-fefault cart">
