@using Shop_ThoiTrang_Online.Controllers
@{
    ViewBag.Title = "details_cart";
}

@{

                var cart = Session["cart"];
                double? thanhtien = 0;
               
        <section id="cart_items">
            <div class="container">
                <div class="breadcrumbs">
                    <ol class="breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li class="active">Shopping Cart</li>
                    </ol>
                </div>
                <div class="table-responsive cart_info col-md-9">
                    <table class="table table-condensed">
                        <thead>
                            <tr class="cart_menu">
                                <td class="image">Hình ảnh</td>
                                <td class="description">Tên sản phẩm </td>
                                <td class="price">Đơn giá</td>
                                <td class="quantity">Số lượng</td>
                                <td class="total">Thành tiền</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Item item in (List<Item>)Session["Cart"])
                            {
                                <tr>
                                    <td class="cart_product">
                                        <a href="#"><img style="height:100px; width:100px;" src="~/Media/images/all/@item.Sanpham.hinhanh" alt=""></a>
                                    </td>
                                    <td class="cart_description">
                                        <h4><a href="#">@item.Sanpham.tensp</a></h4>
                                        <p>mã sp: @item.Sanpham.masp</p>
                                    </td>
                                    <td class="cart_price">
                                        <p>@item.Sanpham.dongia</p>
                                    </td>
                                    <td class="cart_quantity">
                                        <div class="cart_quantity_button">
                                            <a class="cart_quantity_up" href=""> + </a>
                                            <input class="cart_quantity_input" type="text" name="quantity" value="@item.Soluong" autocomplete="off" size="2">
                                            <a class="cart_quantity_down" href=""> - </a>
                                        </div>
                                    </td>
                                    <td class="cart_total">
                                        @{ thanhtien = item.Sanpham.dongia * item.Soluong;}
                                        <p class="cart_total_price">@thanhtien vnd</p>
                                    </td>
                                    <td class="cart_delete">
                                        <a class="cart_quantity_delete" href="/Cart/xoa?masp=@item.Sanpham.masp"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                            }
                           


                        </tbody>
                    </table>
                </div>
            </div>
        </section>
   
}



